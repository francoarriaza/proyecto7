<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= link_to company.name, category %></td>
        <td><%= company.employee.count %></td>
        <td><button type="button" class="btn btn-success"><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><button type="button" class="btn btn-success"><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

